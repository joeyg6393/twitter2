{
    "manifest_version": 2,
    "name": "Twitter Commentor",
    "version": "2.0",
    "description": "Sends tweet content to a webhook when a button is pressed",
    "permissions": [
      "activeTab",
      "https://twitter.com/*",
      "https://hook.us1.make.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }